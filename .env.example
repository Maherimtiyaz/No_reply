# Application
APP_NAME=NoReply
DEBUG=False

# CORS
CORS_ORIGINS=["http://localhost:3000"]

# Database
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/finemail

# OAuth - Google
# Get these from Google Cloud Console: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/google/callback

# Security
# Generate a secure random string (min 32 characters)
SECRET_KEY=your-secret-key-change-in-production-min-32-chars-long
# Optional: Separate encryption key for token storage (will use SECRET_KEY if not provided)
ENCRYPTION_KEY=

# Frontend URL
FRONTEND_URL=http://localhost:3000

# AI/LLM Configuration
# Options: mock, openai, anthropic
LLM_PROVIDER=mock
# API keys (only needed if using openai or anthropic)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
# Model to use (e.g., gpt-4, claude-3-sonnet-20240229)
LLM_MODEL=

# Parsing Configuration
# Minimum confidence threshold (0.0-1.0) to accept AI parsing results
PARSING_CONFIDENCE_THRESHOLD=0.6
# Use few-shot examples in prompts for better accuracy
PARSING_USE_FEW_SHOT=True
